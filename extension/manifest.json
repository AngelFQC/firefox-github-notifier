{
    "manifest_version": 2,
    "name": "GitHub Notifier",
    "description": "WebExtension to get notifications from GitHub",
    "version": "1.0.2",
    "developer": {
        "name": "Angel Fernando Quiroz Campos",
        "url": "https://angelfqc.wordpress.com"
    },
    "icons": {
        "48": "icons/github.png"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": "icons/github.png"
    },
    "permissions": ["*://api.github.com/notifications", "tabs", "storage"],
    "options_ui": {
        "page": "options/page.html"
    },
    "applications": {
        "gecko": {
            "id": "{0906178a-2043-4d0c-a099-bd6a4d00945e}"
        }
    }
}
